<div class="content-bg">
  <div class="row">
    <div class="col-md-12">
      <div id="content_wrapper">
        <div id="active_admin_content">
          <div id="login">
            <h2 align="center">Log in</h2>
            <br />
            <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "formtastic admin_user"}) do |f| %>
              <label class="control-label" style="margin-left: 60px; color:#4885dc"> EMAIL ADDRESS </label>
              <%= f.email_field :email, autofocus: true, class: "form-control", style: "margin-left: 60px" %>
              <br />
              <label class="control-label" style="margin-left: 60px; color:#4885dc"> PASSWORD </label>
              <%= f.password_field :password, autocomplete: "off", class: "form-control", style: "margin-left: 60px" %>
              <br />
              <div class="actions">
                <%- if devise_mapping.recoverable? %>
                  <br />
                  <%= link_to "Forgot your password", new_password_path(resource_name), class: "pull-left", style: "margin-left: 60px; color:grey; text-decoration: underline;"%>
                <% end -%>
                <%= f.button "Log in", class: "btn btn-primary pull-right", type:"submit", style: "margin-right: 50px;"%>
              </div>
              <br />
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

